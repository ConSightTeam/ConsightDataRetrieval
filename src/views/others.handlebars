<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Custom Statistic Page</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="./">Home</a></li>
                        <li class="breadcrumb-item active">Others</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <p>You can use the form below to go to your custom statistic data</p>
        </div>

        <div class="col-sm-6">
        <div class="card card-dark">
              <div class="card-header">
                <h3 class="card-title">Enter your data here</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
                <div class="card-body">
                  <div class="form-group row">
                    <label for="inputProperty" class="col-sm-2 col-form-label">Property</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="inputProperty" placeholder="Property Name">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputUnit" class="col-sm-2 col-form-label">Unit</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="inputUnit" placeholder="Unit Name">
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button id="goButton" class="btn btn-primary float-right">Go</button>
                </div>
                <!-- /.card-footer -->
            </div>
        </div>
    </section>
</div>
<script>
    document.getElementById("goButton").onclick = function() { goToStatisticPage() };

    function goToStatisticPage() {
      var prop = document.getElementById('inputProperty').value;
      var unit = document.getElementById('inputUnit').value;
      window.location.href = "./statistic/" + prop + "/" + unit + "/day";
    }
</script>